// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "sqlite"
  url      = "file:Databases/dev.db"
}

model operative {
  discordID   String     @id @unique
  userName    String     @unique
  rank        String
  profileLink String     @unique
  activeLog   Boolean
  activeLogID String     @unique
  logs        logs[]
  response    response[]
}

model quotas {
  rankName            String     @id @unique
  logRequirement      String     
  responseRequirement String
  quotaActive         Boolean     
}

model quota_blocks {
  blockNum            String     @id @unique
  unix_starttime      String     
  unix_endtime        String
  blockActive         Boolean     
}

model response {
  //use discord message ID of the announcement as unique identifier (saves time :steamhappy:)
  responseID         String        @id @unique
  responseType       String
  timeStarted        String
  timeEnded          String
  started            Boolean
  cancelled          Boolean
  spontaneous        Boolean
  trellocardID       String
  Host               operative? @relation(fields: [operativeDiscordID], references: [discordID])
  operativeDiscordID String?
  operativeName      String?
}

model ranks {
  rankName      String @unique
  discordRoleID String @id @unique
  RobloxRankID  String @unique
}

model logs {
  logID              String     @id @unique
  timeStarted        String
  timeEnded          String
  timeElapsed        String
  logProof           String     @default("No proof provided")
  Operative          operative? @relation(fields: [operativeDiscordID], references: [discordID])
  operativeDiscordID String?
  operativeName      String?
}

model server {
  serverID               String @id @unique
  announceRole           String
  announceChannel        String
  logPermissionRole      String
  announcePermissionRole String
  commandRole            String
  developerRole          String
}